package Servidor;

import java.rmi.server.*;
import java.rmi.*;

public class RMIServidorImplementacao {

	/*
	 * To change this license header, choose License Headers in Project Properties.
	 * To change this template file, choose Tools | Templates
	 * and open the template in the editor.
	 */
	 
	/**
	 *
	 * @author mateus
	 */
	public class RMIServerImplementation extends UnicastRemoteObject implements RMIInterfaces{
	     
	     
	    private String mensagem = "Iniciar";
	    public RMIServerImplementation() throws RemoteException{
	        super();
	         
	    }
	    
	    public String getMensagem() throws RemoteException{
	        return mensagem;
	    }
	     
	     
	    public void setMensagem(String msg) throws RemoteException{
	        mensagem = msg;
	       }
	     
	     
	    public double fatorial(double num){
	        double fat = 1;
	        for (int i = 2; i <= num; i++ ){
	            fat = fat*i;
	        }
	            return fat;
	     
	    }
	     
	     
	     
	}
}
